#!/usr/bin/env perl

use strict;
use warnings;
use 5.010;

use List::Util qw(first);

our $VERSION = '0.00';

sub table_exists {
	my $db = shift;
	my $table = shift;
	my @tables = $db->tables('','','','TABLE');

	if (first { $_ eq $table } @tables) {
		return 1;
	}
	return 0;
}

__END__

